<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/ll_item_allorder"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_item_allorder_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_item_allorder_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10dp"
                android:text="2016秋季新款女装简约纯色百搭衬衫"
                android:textColor="@color/contents_text"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_item_allorder_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp"
                    android:text="共一件"
                    android:textSize="@dimen/common_font_size_12"
                    android:layout_toLeftOf="@+id/tv_item_allorder_item_price"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_item_allorder_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp"
                    android:text="¥288.00"
                    android:textSize="@dimen/common_font_size_16"
                    android:textColor="@color/red"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:background="@color/app_background"
        />
</RelativeLayout>